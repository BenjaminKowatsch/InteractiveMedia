<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/payment_amount"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="Amount"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/payment_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/payment_amount"
        android:hint="From" />

    <TextView
        android:id="@+id/payment_direction_indicator"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/payment_from"
        android:text=" > "
        android:textAlignment="center" />

    <TextView
        android:id="@+id/payment_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/payment_direction_indicator"
        android:hint="To"/>

</RelativeLayout>